#include <stdio.h>

int main(void) {
  char letter;

  printf("Enter a character: ");
  scanf("%c", &ch);

  if (letter == 'a' || letter == 'e' || letter == 'i' || letter == 'o' || letter == 'u' ||
      letter == 'A' || letter == 'E' || letter == 'I' || letter == 'O' || letter == 'U') {
    printf("'%c' is a vowel.\n", letter);
  } else {
    printf("'%c' is a consonant.\n", letter);
  }

  return 0;
}

